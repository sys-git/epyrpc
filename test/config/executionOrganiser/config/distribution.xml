<distribution
    xmlns="distribution"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="distribution validation/distribution.xsd">
    <SourceDistribution>
        <sourceExtensions>
            <extension>*.py</extension>
            <extension>*.cfg</extension>
            <extension>*.xml</extension>
            <extension>*.ini</extension>
        </sourceExtensions>
        <transferChunkSize>1024</transferChunkSize>
    </SourceDistribution>
</distribution>
